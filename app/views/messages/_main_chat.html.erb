<div class="main-header">
  <div class="group-name">
      <%= @room.name %>
  </div>
  <div class="chat-end-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="main">
    <%= render partial: 'message', collection: @messages %>
</div>
<%= form_with model: [@room, @message], class: 'main-footer', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'message-box', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send-btn' %>
<% end %>